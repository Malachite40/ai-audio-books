{
  "name": "@workspace/transactional",
  "type": "module",
  
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/src/index.js"
    },
    "./emails/*": {
      "types": "./dist/emails/*.d.ts",
      "import": "./emails/*.tsx",
      "require": "./dist/emails/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunx --bun tsc -p tsconfig.json",
    "watch": "bunx --bun tsc -p tsconfig.json -w --preserveWatchOutput",
    "dev": "bunx --bun tsc -p tsconfig.json -w --preserveWatchOutput & email dev --port 3050",
    "export": "email export",
    "prepare": "bun run build"
  },
  "devDependencies": {
    "@react-email/preview-server": "4.2.11",
    "@types/bun": "latest",
    "react-email": "4.2.11"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@react-email/components": "0.5.3",
    "dotenv": "^17.2.2",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  }
}
